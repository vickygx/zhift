extends layout

block head
    link(rel="stylesheet", href="stylesheets/demo.css")
    script(type="text/javascript", src="javascripts/demo-controller.js")
  
block content

    script.
        var demoController = new DemoController();
        $(document).ready(function() {
          demoController.init();
        });

    div.collectionDiv 
        h1.collectionTitle Organizations
        ul
            li Create
                legend
                    form#createOrgForm(name="createOrgForm")
                        input(name="name", placeholder="Name of org", required) 
                        br
                        input(type="submit")
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#createOrgResponse
            li Get
                legend
                    form#getOrgForm(name="getOrgForm")
                        input(name="name", placeholder="Name of org", required)
                        br
                        input(type="submit") 
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#getOrgResponse
    div.collectionDiv 
        h1.collectionTitle Schedule
        ul
            li Create
                legend
                    form#createScheduleForm(name="createScheduleForm")
                        input(name="orgName", placeholder="Name of org", required) 
                        br
                        input(name="role", placeholder="Name of role", required) 
                        br
                        input(type="submit")
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#createScheduleResponse
            li Get
                legend
                    form#getScheduleForm(name="getScheduleForm")
                        input(name="id", placeholder="Schedule ID", required)
                        br
                        input(type="submit") 
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#getScheduleResponse
    div.collectionDiv 
        h1.collectionTitle User
        ul
            li Create
                legend
                    form#createUserForm(name="createUserForm")
                        input(name="organization", placeholder="Organization", required) 
                        br
                        input(name="username", placeholder="Username", required) 
                        br
                        input(name="password", placeholder="Password", required) 
                        br
                        input(type="radio" name="type" value="employee" checked) 
                        | Employee
                        input(type="radio" name="type" value="manager") 
                        | Manager
                        br
                        input(type="submit")
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#createUserResponse
            li Get
                legend
                    form#getUserForm(name="getUserForm")
                        input(name="organization", placeholder="Organization", required) 
                        br
                        input(name="username", placeholder="Username", required) 
                        br
                        input(type="submit") 
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#getUserResponse
    div.collectionDiv 
        h1.collectionTitle Shift
        ul
            li Create
                legend
                    form#createShiftForm(name="createShiftForm")
                        input(name="day", placeholder="day", required) 
                        br
                        input(name="startTime", placeholder="start time", required) 
                        br
                        input(name="endTime", placeholder="end time", required) 
                        br
                        input(name="employeeId", placeholder="employeeId", required) 
                        br
                        input(name="scheduleId", placeholder="scheduleId", required) 
                        br
                        input(name="date", placeholder="date", required) 
                        br
                        input(type="submit")
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#createShiftResponse
            li Get User Shifts
                legend
                    form#getUserShiftsForm(name="getUserShiftsForm")
                        input(name="employeeId", placeholder="employeeId", required) 
                        br
                        input(type="submit") 
                        br
                legend.responseLegend
                    div Response: 
                    div.responseDiv#getUserShiftsResponse
