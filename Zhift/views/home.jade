extends layout
block head
	include mixins/css.jade
	+css('main')
	+css('shift')

	include mixins/shift-display.jade

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.name}. Check your details below:
						div.signup-wall
							ul.user-details
								li Name ---> #{user.name}
								li Email ---> #{user.email}
								li Organization ---> #{user.org} 
						a(href='/signout', class='text-center new-account') Sign Out
	h1= title
	p Welcome to #{title}

	p Showing shift mixin
	+shiftDisplay('shiftDisplay')