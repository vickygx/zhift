//- @author Lily Seropian, Anji Ren

extends ../layout

block content
  div.form-container
    form.form-horizontal(class="form-signin", action="/login", method="POST")
      fieldset
        h2 Sign in
        div.form-group
          label.col-lg-2.control-label(for="inputEmail") Email
          div.col-lg-10
            input#inputEmail(type="text", name="email", placeholder='"name@email.com"', required, autofocus)
        div.form-group
          label.col-lg-2.control-label Organization
          div.col-lg-10
            input(type="text", name="org" placeholder='"MIT"', required, autofocus)
        div.form-group
          label.col-lg-2.control-label Password
          div.col-lg-10
            input(type="password", name="password" placeholder="Password", required)
        div.form-group
          div.col-lg-10.col-lg-offset-2
            input.btn.btn-primary.yellow-button(type="submit", value="Sign in")
    br
    -if(message)
      div #{message}
    a(href="/signup") Create an account